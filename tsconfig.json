{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "sourceRoot": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_module/@types", "./src/types"],
    "lib": ["ES6", "DOM", "ESNext", "DOM.Iterable"],
    "moduleResolution": "Node",
  },
  "ts-node": {
    "files": true,
  },
}