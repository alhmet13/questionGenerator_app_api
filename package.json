{
  "name": "todo-app-api",
  "version": "1.0.0",
  "main": "./src/app.ts",
  "author": "",
  "license": "ISC",
  "description": "Nodejs Application for Todo",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "clean": "rm -rf yarn.lock && rm -rf package-lock.json && rm -rf node_modules",
    "build": "npm install && tsc",
    "build:prod": "tsc",
    "dev": "nodemon -r dotenv/config ./src/app.ts",
    "dbpush": "npx prisma db push",
    "start": "node -r dotenv/config dist/app.js",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npx prisma generate",
    "preinstall": "npm config set audit false"
  },
  "dependencies": {
    "@prisma/client": "^7.0.1",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "hono": "^4.10.7",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "pino": "^9.8.0",
    "pino-http": "^10.5.0",
    "valibot": "^1.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/moment": "^2.11.29",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.1",
    "@types/pino-http": "^5.8.4",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "prisma": "^7.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  
  "overrides": {
    "@prisma/dev": {
      "hono": "^4.10.3",
      "valibot": "^1.2.0"
    }
  
}
}


